<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="{Binding Title}" NavigationPage.BarBackgroundColor="#4E1E50"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:local="clr-namespace:Salon_Pro_APP.CustomRenderers"
    x:Class="Salon_Pro_APP.Views.Link_3">
	<AbsoluteLayout>

        <Image Source="homebackground.png" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Aspect="AspectFill" />

        <local:HybridWebView x:Name="hybridWebView" Uri="{Binding WebURL}"
          HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" VerticalOptions="FillAndExpand" />

        <ActivityIndicator IsVisible="{Binding IsBusy}"  x:Name="ActivityIndicator" 
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" IsRunning="{Binding IsBusy}" />
        
    </AbsoluteLayout>
</ContentPage>
